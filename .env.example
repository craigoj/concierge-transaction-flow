# =============================================================================
# Concierge Transaction Flow - Environment Variables Template
# =============================================================================
# 
# Copy this file to .env and fill in the actual values for your environment.
# Never commit the actual .env file to version control.
#
# Environment Options: development, staging, production, test
NODE_ENV=development

# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================

# Supabase Configuration for Frontend
# Get these from your Supabase project settings: https://app.supabase.com/project/[project-id]/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Application Configuration
VITE_APP_NAME="Concierge Transaction Flow"
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_SENTRY=false

# =============================================================================
# SUPABASE BACKEND CONFIGURATION
# =============================================================================

# Supabase Project Configuration
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@localhost:54322/postgres
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXPIRY=3600

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Service (Resend.com)
RESEND_API_KEY=re_your-resend-api-key-here
FROM_EMAIL=noreply@theagentconcierge.co
REPLY_TO_EMAIL=support@theagentconcierge.co

# SMS Service (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Calendar Integration (Google Calendar)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback/google

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry Error Tracking & Performance Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.01
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Vercel Analytics & Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
VERCEL_SPEED_INSIGHTS_ID=your-vercel-speed-insights-id

# External Uptime Monitoring Services
UPTIME_ROBOT_API_KEY=your-uptime-robot-api-key
PINGDOM_API_KEY=your-pingdom-api-key
STATUSPAGE_API_KEY=your-statuspage-api-key

# Performance Thresholds
PERFORMANCE_LCP_THRESHOLD=2500
PERFORMANCE_INP_THRESHOLD=200
PERFORMANCE_CLS_THRESHOLD=0.1
PERFORMANCE_FCP_THRESHOLD=1800
PERFORMANCE_TTFB_THRESHOLD=600

# Alert Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
ALERT_EMAIL=alerts@your-domain.com

# Database Monitoring
DB_SLOW_QUERY_THRESHOLD=2000
DB_CONNECTION_TIMEOUT=10000
DB_HEALTH_CHECK_INTERVAL=60000

# Backup Verification
BACKUP_VERIFICATION_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# Netlify Configuration (Alternative)
NETLIFY_AUTH_TOKEN=your-netlify-auth-token
NETLIFY_SITE_ID=your-netlify-site-id

# Docker Registry
DOCKER_REGISTRY_URL=ghcr.io
DOCKER_REGISTRY_USERNAME=your-github-username
DOCKER_REGISTRY_PASSWORD=your-github-token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://your-domain.com
CORS_CREDENTIALS=true

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Encryption Configuration
VITE_ENCRYPTION_KEY=your-encryption-key-at-least-16-characters-long
ENCRYPTION_KEY=your-server-encryption-key-at-least-16-characters-long

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================

# Local Supabase Configuration
SUPABASE_DB_HOST=localhost
SUPABASE_DB_PORT=54322
SUPABASE_STUDIO_PORT=54323
SUPABASE_API_PORT=54321

# Local Service URLs
API_EXTERNAL_URL=http://localhost:54321
SITE_URL=http://localhost:5173
ADDITIONAL_REDIRECT_URLS=http://localhost:5173/**

# Development Flags
DISABLE_SIGNUP=false
ENABLE_EMAIL_CONFIRMATIONS=false
ENABLE_PHONE_CONFIRMATIONS=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:test-password@localhost:54322/test_db

# Test Configuration
CI=false
TEST_TIMEOUT=30000
E2E_BASE_URL=http://localhost:5173

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/tmp/playwright
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
ENABLE_CDN=false

# Cache Configuration
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true